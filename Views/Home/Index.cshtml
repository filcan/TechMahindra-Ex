@{
    ViewBag.Title = "Search UML Design";
}

<style>
    .container {
        max-width: 600px;
        width: 100%;
        display: flex;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>


<div style="top: 40%; position: absolute; align-items:center; max-width: 600px; width: 100%;">
    <img src="~/Images/Top4Search-white(300x75).png" alt="Top4Search" style="display:block; margin-left: auto; margin-right:auto">
    <form class="container" action="ShowResults" method="post">
        <div class="form-group">
            <div class="form-group">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" aria-describedby="button-addon2" name="search" required>
                    <button class="btn btn-primary" type="submit" id="button-addon2"> <i class="fas fa-search"></i></button>
                </div>
            </div>
        </div>
    </form>
    <div style=" display:block; margin-left: auto; margin-right:auto">
        <button type="button" class="btn btn-primary btn-sm">UML Design</button>
        <button type="button" class="btn btn-primary btn-sm">Image Search</button>
    </div>
</div>





