<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap-quartz.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
          crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>

</head>
<nav class="navbar navbar-expand navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" id="buttonUML" data-action="@Url.Action("SearchResult", "Search")" style="cursor: pointer">Top4Search</a>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Search")">Search Engine</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    $("#buttonUML").on("click", function () {
        $.ajax({
            url: $("#buttonUML").attr("data-action"),
            data: { "searchKeyword": "Top 4 UML Design" },
            success: function () {
                window.location.href = '@Url.Action("DisplayResult", "Search")';
            }
        });
    });
</script>

<body>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

<footer class="bg-light page-footer font-small blue fixed-bottom">
    <div class="footer-copyright text-center py-2 text-dark">
        Developer:
        <a href="https://www.linkedin.com/in/filcan/" class="text-dark">Filbert Vincent Cañares</a>
    </div>
</footer>
</html>
